<html lang="en">
    <%- include('./partials/Head.ejs') %>
    <body>
        <div class = mainBox>
            <div class = displayBox>
        <%- include('./partials/nav.ejs') %>
        <div class="Species content">
            <form action="/caretakers" method="POST">
                <b>Caretakers: </b></br> 
            <% if (theCaretaker.length > 0) { %>
                <% theCaretaker.forEach(caretaker => { %>
                    <br><h3>Name: <%= caretaker.First_Name %> <%=caretaker.Last_Name%></h3><br> Age: <%=caretaker.Age%>&nbsp;&nbsp; Email: <%=caretaker.Email%></br>
                    <br>
                    <a href="/caretakers/<%=caretaker.Caretaker_ID%>/edit?FirstName=<%=caretaker.First_Name%>&LastName=<%=caretaker.Last_Name%>&Age=<%=caretaker.Age%> &Email=<%=caretaker.Email%>">edit</a>
                    <a href="/caretakers/<%=caretaker.Caretaker_ID%>/replace?FirstName=<%=caretaker.First_Name%>&LastName=<%=caretaker.Last_Name%>&Age=<%=caretaker.Age%> &Email=<%=caretaker.Email%>">replace</a>
                    <a href="/caretakers/<%=caretaker.Caretaker_ID%>/delete?FirstName=<%=caretaker.First_Name%>&LastName=<%=caretaker.Last_Name%>&Age=<%=caretaker.Age%> &Email=<%=caretaker.Email%>">delete</a>
                    <br>
                    <% }) %>
            <% } %>
        </br><label>Add Caretaker:</label></br>
        <label>First Name:
            <input type="text" id="firstName" name="firstName" value="<%= locals.firstName %>" required>
        </label>
        <label>Last Name:
            <input type="text" id="lastName" name="lastName" value="<%= locals.lastName %>" required>
        </label>
        <label>Age:
            <input type="text" id="age" name="age" value="<%= locals.age %>" required>
        </label>

        <label>Email:
            <input type="text" id="email" name="email" value="<%= locals.email %>">
        </label>
        </br>
        <button>POST</button>
    </form>
        </div>
    </body>
    <%- include('./partials/Footer.ejs') %>
</div>
</div>
</html>